    <section class="ftco-section justify-content-end ftco-search">
				<div class="container-wrap ml-auto">
					<div class="row no-gutters">
				<div class="col-md-12 nav-link-wrap">
					<div class="nav nav-pills justify-content-center text-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
					<a class="nav-link active" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab" aria-controls="v-pills-1" aria-selected="true">Flight</a>

					<a class="nav-link" id="v-pills-2-tab" data-toggle="pill" href="#v-pills-2" role="tab" aria-controls="v-pills-2" aria-selected="false">Hotel</a>
					</div>
				</div>
				<div class="col-md-12 tab-wrap">
					
					<div class="tab-content p-4 px-5" id="v-pills-tabContent">

					<div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-nextgen-tab">
						<form method="post" asp-page="Index" class="search-destination">
							<div class="row">
								<!-- type -->
								<div class="col-md align-items-end">
									<div class="form-group">
										<label for="#">Type</label>
										<div class="form-field">
											<div class="select-wrap">
												<div class="icon"><span class="ion-ios-arrow-down"></span></div>
												<select asp-for="@Model.FlightType" id="flightType" class='form-control'>
													<option  value="round" selected>Round trip</option>
													<option  value="one">One way</option>
												</select>
											</div>
										</div>
									</div>
								</div>
								<!-- adults -->
								<div class="col-md align-items-end">
									<div class="form-group">
										<label for="#">Adults</label>
										<div class="form-field">
											<div class="select-wrap">
												<a style="cursor:pointer" class="icon-up plus" id="plus-adult"><span class="ion-ios-arrow-up"></span></a>
												<input asp-for="@Model.NumAdults" type="text" id="adult" class="form-control" value="1" />
												<a style="cursor:pointer" class="icon-down min" id="min-adult"><span class="ion-ios-arrow-down"></span></a>
											</div>
										</div>
									</div>
								</div>
								<!-- childs -->
								<div class="col-md align-items-end">
									<div class="form-group">
										<label for="#">Childrens</label>
										<div class="form-field">
											<div class="select-wrap">
												<a style="cursor:pointer" class="icon-up plus" id="plus-child"><span class="ion-ios-arrow-up"></span></a>
												<input asp-for="@Model.NumChilds" type="text" id="child" class="form-control" value="0" />
												<a style="cursor:pointer" class="icon-down min" id="min-child"><span class="ion-ios-arrow-down"></span></a>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="row">								
								<!-- from -->
								<div class="col-md align-items-end">
									<div class="form-group">
										<label for="#">From</label>
										<div class="form-field" >
											<div class="icon"><span class="icon-my_location"></span></div>
											<input asp-for="@Model.From" type="text" id="From" class="form-control" placeholder="From" />
										</div>
									</div>
								</div>
								<!-- where -->
								<div class="col-md align-items-end">
									<div class="form-group">
										<label for="#">Where</label>
										<div class="form-field">
											<div class="icon"><span class="icon-map-marker"></span></div>
											<input asp-for="@Model.Where" type="text" id="Where" class="form-control" placeholder="Where">
										</div>
									</div>
								</div>
								<!-- checkin -->
								<div class="col-md align-items-end">
									<div class="form-group">
										<label for="#">Check In</label>
										<div class="form-field">
											<div class="icon"><span class="icon-map-marker"></span></div>
											<input asp-for="@Model.DepDate" type="text" class="form-control checkin_date" placeholder="Check In">
										</div>
									</div>
								</div>
								<!-- checkout -->
								<div id="checkOutContainer" class="col-md align-items-end">
									<div class="form-group">
										<label for="#">Check Out</label>
										<div class="form-field">
											<div class="icon"><span class="icon-map-marker"></span></div>
											<input asp-for="@Model.ArrDate"  type="text" class="form-control checkout_date" placeholder="Check Out">
										</div>
									</div>
								</div>
								
								<div class="col-md align-self-end">
									<div class="form-group">
										<div class="form-field">
											<input type="submit" value="Search" class="form-control btn btn-primary">
										</div>
									</div>
								</div>
							</div>
							<div style="font-size:13px"><p style="font-weight: 700; display:inline">Caution:</p> The number of passengers should be less than or equal 10</div>
						</form>
					</div>

					<div class="tab-pane fade" id="v-pills-2" role="tabpanel" aria-labelledby="v-pills-performance-tab">
								<div class="col-md align-self-end">
									<div class="form-group" style="text-align:center">
										<label for="#" style="font-size:25px">Search Hotels</label>
										<div class="form-field">
											<a asp-protocol="https" asp-host="agoda.com/" class="form-control btn btn-primary" style="font-size:30px;width:30%;text-align:center">Search</a>
										</div>
									</div>
								</div>
					</div>
				</div>
			</div>
			</div>
		</section>
